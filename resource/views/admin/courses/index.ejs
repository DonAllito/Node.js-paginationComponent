<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>مقالات</h2>
    <div class="btn-group">
        <a href="/admin/courses/create" class="btn btn-sm btn-primary">ایجاد مقاله جدید</a>
    </div>
</div>
<div class="table-responsive table-active">
    <table class="table table-striped table-bordered ">
        <thead class="table-dark">
        <tr class="">
            <th>عنوان مقاله</th>
            <th>تنظیمات</th>
        </tr>
        </thead>
        <tbody>
        <% posts.docs.forEach(course => { %>
        <tr>
            <td><a href="<%= course.path()%>" class="text-dark"><%= course.title %></a></td>


            <td>
                <form action="/admin/courses/<%= course._id %>?_method=DELETE" method="post">
                    <div class="btn-group btn-group-sm">
                        <a href="/admin/courses/<%= course._id %>/edit"  class="btn btn-primary">ویرایش</a>
                        <button type="submit" class="btn btn-info">حذف</button>
                    </div>
                </form>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
<!-- Call Paginate Component-->
    <%- include(viewPath('layouts/pagination') ,{ pagination : posts}) %>
</div>
    
    