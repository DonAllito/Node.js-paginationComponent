<div class="d-flex justify-content-center ">
    <% if (pagination.pages > 1) { %>  
        <ul class="pagination">  
          <% if (pagination.page > 1) { %>
              <li class="page-item"><a class="page-link" href="?page=1">&laquo;</a></li>
          <% } %>
          <% var i = 1;
          if (pagination.page > 5) {
            i = +pagination.page - 4;
          } %>
          <% if (i !== 1) { %>
              <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
          <% } %>
          <% for (i; i<=pagination.pages; i++) { %>
            <% if (pagination.page == i) { %>
                <li class="page-item active"><a class="page-link" href="#"><span><%= i %></span></a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == (+pagination.page + 4)) { %>
                <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <% break; } %>
          <% } %>
          <% if (pagination.page != pagination.pages) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= pagination.pages %>">&raquo;</a></li>
          <% } %>
        </ul>  
    <% } %>  

</div>
<form class="form-horizontal" method="GET" action="" novalidate>
<div class="form-group d-flex justify-content-center">
    <label for="page" class=" p-1 form-label" >به صفحه دلخواه بروید :    </label>
    <input id="page" type="number" class=" ml-2  form-group mr-10 p-1" name="page" value="<%= pagination.page  %>" required>   
    <a id="w3r" href="?"> <button class="btn btn-primary  btn-sm ">کلیک کنید </button></a>
  
</div>
</form>

<script>
    function getInputValue(){
        // Selecting the input element and get its value 
        var inputVal = document.getElementById("page").value;

        document.getElementById("w3r").href = inputVal
    }
</script>